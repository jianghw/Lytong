<?xml version="1.0" encoding="utf-8"?>
<com.jcodecraeer.xrecyclerview.touch.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    swipe:contentViewId="@+id/lv_swipe_content"
    swipe:leftViewId="@+id/lv_swipe_left"
    swipe:rightViewId="@+id/lv_swipe_right">

    <com.jcodecraeer.xrecyclerview.touch.SwipeMenuView
        android:id="@id/lv_swipe_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@id/lv_swipe_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jcodecraeer.xrecyclerview.touch.SwipeMenuView
        android:id="@id/lv_swipe_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</com.jcodecraeer.xrecyclerview.touch.SwipeMenuLayout>