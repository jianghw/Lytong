<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ResourceName">

    <EditText
        android:id="@+id/edt_pass"
        style="@style/ResTextTheme.16.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/res_color_white"
        android:gravity="left|center_vertical"
        android:hint="请输入6-20位密码(字母与数字组合)"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/edt_pass"
        android:layout_marginLeft="16dip"
        android:background="@color/res_color_gray_e6"/>

    <EditText
        android:id="@+id/edt_word"
        style="@style/ResTextTheme.16.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/underline"
        android:background="@color/res_color_white"
        android:gravity="left|center_vertical"
        android:hint="请再输入一遍"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:singleLine="true"/>

    <Button
        android:id="@+id/btn_login"
        style="@style/ResButtonTheme.Single"
        android:layout_below="@+id/edt_word"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="注    册"/>

    <com.tzly.ctcyh.user.custom.CustomNumKeyBoard
        android:id="@+id/num_keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

    <com.tzly.ctcyh.user.custom.CustomCharKeyBoard
        android:id="@+id/char_keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>