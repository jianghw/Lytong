<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/res_color_gray_f8"
    android:orientation="vertical"
    android:padding="@dimen/res_x_12"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/res_x_12"
        android:background="@color/res_color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/app_icon"/>

        <TextView
            style="@style/UserCustomKeyBoardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全输入"
            android:textSize="@dimen/res_fs_14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/input_one"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="1"/>

                <TextView
                    android:id="@+id/input_two"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="2"/>

                <TextView
                    android:id="@+id/input_three"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/input_four"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="4"/>

                <TextView
                    android:id="@+id/input_five"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="5"/>

                <TextView
                    android:id="@+id/input_six"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="6"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/input_del"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@drawable/selector_keyboard_char"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_keyboard_del"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/input_seven"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="7"/>

                <TextView
                    android:id="@+id/input_eight"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="8"/>

                <TextView
                    android:id="@+id/input_nine"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="9"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/input_abc"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="ABC"/>

                <TextView
                    android:id="@+id/input_zero"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="0"/>

                <LinearLayout
                    android:id="@+id/input_num_hide"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="0">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="18dp"
                        android:background="@mipmap/ic_keyboard_hide"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/input_finish"
            style="@style/UserCustomKeyBoardStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_keyboard_blue"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/res_color_white"
            android:textSize="@dimen/res_fs_18"/>
    </LinearLayout>
</LinearLayout>
