<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <!--    android:imeOptions="actionNone" //输入框右侧不带任何提示
        android:imeOptions="actionGo"   //右下角按键内容为'开始'
        android:imeOptions="actionSearch" //右下角按键为放大镜图片，搜索
        android:imeOptions="actionSend"   //右下角按键内容为'发送'
        android:imeOptions="actionNext"  //右下角按键内容为'下一步' 或者下一项
        android:imeOptions="actionDone" //右下角按键内容为'完成'
        android:imeOptions="flagNoExtractUi" //使软键盘不全屏显示-->
    <EditText
        android:id="@+id/edt_phone"
        style="@style/ResTextTheme.16.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/res_color_white"
        android:gravity="left|center_vertical"
        android:hint="请输入您的手机号"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/edt_phone"
        android:layout_marginLeft="16dip"
        android:background="@color/res_color_gray_e6"/>

    <EditText
        android:id="@+id/edt_code"
        style="@style/ResTextTheme.16.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/underline"
        android:background="@color/res_color_white"
        android:gravity="left|center_vertical"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:singleLine="true"/>

    <Button
        android:id="@+id/btn_login"
        style="@style/ResButtonTheme.Single"
        android:layout_below="@+id/edt_code"
        android:layout_marginTop="24dip"
        android:text="登    录"/>

    <TextView
        android:id="@+id/tv_forget_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_login"
        android:layout_marginRight="16dip"
        android:layout_marginTop="8dp"
        android:background="@mipmap/login_forget_password_bg"
        android:paddingLeft="16dip"
        android:paddingTop="12dip"
        android:text="忘记密码?"
        android:textColor="@color/res_color_blue_59"
        android:textSize="13sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forget_pw"
        android:src="@mipmap/ic_login_forget_pw"/>

    <com.tzly.ctcyh.user.custom.CustomNumKeyBoard
        android:id="@+id/num_keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

    <com.tzly.ctcyh.user.custom.CustomCharKeyBoard
        android:id="@+id/char_keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>