                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="d"/>

                <TextView
                    android:id="@+id/input_f"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="f"/>

                <TextView
                    android:id="@+id/input_g"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="g"/>

                <TextView
                    android:id="@+id/input_h"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="h"/>

                <TextView
                    android:id="@+id/input_j"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
