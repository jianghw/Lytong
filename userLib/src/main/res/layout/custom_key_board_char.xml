        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/input_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/input_tab_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/user_ic_char_lower"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/input_z"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="z"/>

                <TextView
                    android:id="@+id/input_x"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="x"/>

                <TextView
                    android:id="@+id/input_c"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="c"/>

                <TextView
                    android:id="@+id/input_v"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="v"/>

                <TextView
                    android:id="@+id/input_b"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="b"/>

                <TextView
                    android:id="@+id/input_n"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="n"/>

                <TextView
                    android:id="@+id/input_m"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="m"/>

                <LinearLayout
                    android:id="@+id/input_word_del"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/user_ic_keyboard_del"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/input_num"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="123"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"/>

                <LinearLayout
                    android:id="@+id/input_word_hide"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="0">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="14dp"
                        android:background="@mipmap/user_ic_keyboard_hide"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/input_word_finish"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_keyboard_blue"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/res_color_white"
                    android:textSize="@dimen/res_fs_18"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
