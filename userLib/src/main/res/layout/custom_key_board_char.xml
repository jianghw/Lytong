                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/input_q"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="q"/>

                <TextView
                    android:id="@+id/input_w"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="w"/>

                <TextView
                    android:id="@+id/input_e"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="e"/>

                <TextView
                    android:id="@+id/input_r"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="r"/>

                <TextView
                    android:id="@+id/input_t"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="t"/>

                <TextView
                    android:id="@+id/input_y"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="y"/>

                <TextView
                    android:id="@+id/input_u"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_keyboard_char"
                    android:gravity="center"
                    android:text="u"/>

                <TextView
                    android:id="@+id/input_i"
                    style="@style/UserCustomKeyBoardStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
