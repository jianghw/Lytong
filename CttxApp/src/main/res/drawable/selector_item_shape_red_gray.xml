<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/res_color_white"/>
            <stroke
                android:width="@dimen/ds_3"
                android:color="@color/res_color_red_f3"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/ds_18"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/res_color_white"/>
            <stroke
                android:width="@dimen/ds_3"
                android:color="@color/res_color_red_f3"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/ds_18"/>
        </shape>
    </item>

    <item android:state_enabled="true"
        android:state_pressed="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/res_color_white"/>
            <stroke
                android:width="@dimen/ds_3"
                android:color="@color/res_color_black_b3"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/ds_18"/>
        </shape>
    </item>
</selector>