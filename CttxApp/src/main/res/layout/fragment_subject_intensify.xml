<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBgGray_f8"
                android:orientation="vertical">


    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_180"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTvBlue_59b"
        android:gravity="center"
        android:text="选择套餐"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/fs_18sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_commit"
        android:layout_alignParentTop="true">
        <!--套餐选择-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_135"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="套餐选择"
                android:textColor="@color/colorTvBlue_59b"
                android:textSize="@dimen/fs_16sp"/>

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/custom_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_30"
                android:background="@color/colorBgGray_f8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_135"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="套餐介绍"
                android:textColor="@color/colorTvBlue_59b"
                android:textSize="@dimen/fs_16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_1"
                android:layout_marginLeft="@dimen/ds_45"
                android:layout_marginRight="@dimen/ds_45"
                android:background="@color/colorLineGray_e6"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ds_45"
                android:textColor="@color/colorTvBlack_4d"
                android:textSize="@dimen/fs_16sp"
                tools:text="分劲松附近哦i死哦附件是圣诞节放假死哦副食店解
    放旧金山的佛教四大佛教死哦附近司机发生的"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_1"
                android:layout_marginLeft="@dimen/ds_45"
                android:layout_marginRight="@dimen/ds_45"
                android:background="@color/colorLineGray_e6"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_135">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds_45"
                    android:text="套餐价格："
                    android:textColor="@color/colorTvBlue_59b"
                    android:textSize="@dimen/fs_16sp"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ds_45"
                    android:textColor="@color/colorTvRed_f33"
                    android:textSize="@dimen/fs_16sp"
                    tools:text="4545"/>
            </RelativeLayout>

            <TextView
                android:background="@color/colorBgGray_f8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_135"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>