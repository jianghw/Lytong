<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextSmallNoticeInfoStyleWhite"
            android:text="填写还款信息" />

        <com.zantong.mobilecttx.widght.SettingItemView
            android:id="@+id/activity_apply_four_huaikuan_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_144"
            app:titleHintS="请选择自动还款类型"
            app:titleS="自动还款类型"
            app:titleSC="@color/gray_25" />

        <include layout="@layout/view_line1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="@dimen/ds_60">


            <TextView
                style="@style/TextInfoStyle"
                android:text="转出卡号" />

            <EditText
                android:id="@+id/activity_apply_four_bank_card"
                style="@style/EditextNormalNoStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="center_vertical|right"
                android:hint="请输入自动还款转出卡号"
                android:inputType="number"
                android:maxLength="19" />
        </LinearLayout>

        <include layout="@layout/view_line1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/white"
            android:paddingLeft="16dip"
            android:paddingRight="@dimen/ds_60">


            <TextView
                style="@style/TextInfoStyle"
                android:layout_centerVertical="true"
                android:text="开启Email对账单" />

            <com.zantong.mobilecttx.widght.UISwitchButton
                android:id="@+id/activity_apply_four_open_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:bmHeight="@dimen/ds_90"
                app:bmWidth="@dimen/ds_150" />
        </RelativeLayout>

        <include layout="@layout/view_line1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="@dimen/ds_60">


            <TextView
                style="@style/TextInfoStyle"
                android:text="Email" />

            <EditText
                android:id="@+id/activity_apply_four_mail"
                style="@style/EditextNormalNoStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="center_vertical|right"
                android:hint="请输入邮箱地址"
                android:maxLength="25" />
        </LinearLayout>

        <include layout="@layout/view_line1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:background="@color/white"
            android:paddingLeft="16dip"
            android:paddingRight="@dimen/ds_60">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TextInfoStyle"
                    android:text="主卡余额变动提醒" />

                <TextView
                    style="@style/TextInfoStyle"
                    android:text="向发送余额变动提醒"
                    android:textColor="@color/gray_66"
                    android:textSize="@dimen/fs_40" />
            </LinearLayout>

            <com.zantong.mobilecttx.widght.UISwitchButton
                android:id="@+id/activity_apply_four_open_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:bmHeight="@dimen/ds_90"
                app:bmWidth="@dimen/ds_150" />
        </RelativeLayout>

        <include layout="@layout/view_line1" />

        <com.zantong.mobilecttx.widght.SettingItemView
            android:id="@+id/activity_apply_four_lingka_wangdian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_144"
            app:titleHintS="请选择领卡网点"
            app:titleS="领卡网点"
            app:titleSC="@color/gray_25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="@dimen/ds_60">


            <TextView
                style="@style/TextInfoStyle"
                android:text="营销代码" />

            <EditText
                android:id="@+id/activity_apply_four_yingxiao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/trans"
                android:textSize="@dimen/fs_42"
                android:gravity="center_vertical|right" />
        </LinearLayout>

        <TextView
            style="@style/TextSmallNoticeInfoStyleWhite"
            android:text="补充信息(信息)"
            android:textColor="@color/gray_25"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            style="@style/TextSmallNoticeInfoStyleWhite"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ds_10"
            android:text="提高信用卡额度"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/fs_40"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="@dimen/ds_60"
            android:visibility="gone">


            <TextView
                style="@style/TextInfoStyle"
                android:text="房产信息" />

            <EditText
                android:id="@+id/activity_apply_four_fangchan_info"
                style="@style/EditextNormalNoStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="center_vertical|right"
                android:hint="沪房地___字___第___..."
                android:maxLength="10" />
        </LinearLayout>

        <include layout="@layout/view_line1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="@dimen/ds_60"
            android:visibility="gone">


            <TextView
                style="@style/TextInfoStyle"
                android:text="汽车信息" />

            <EditText
                android:id="@+id/activity_apply_four_car_num"
                style="@style/EditextNormalNoStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="center_vertical|right"
                android:hint="请输入车辆牌号"
                android:maxLength="10" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ds_10"
            android:paddingLeft="@dimen/ds_50"
            android:paddingTop="@dimen/ds_10"
            android:text="申请人声明:"
            android:textColor="@color/red"
            android:textSize="@dimen/fs_40" />

        <TextView
            android:id="@+id/apply_four_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ds_10"
            android:paddingLeft="@dimen/ds_50"
            android:paddingRight="@dimen/ds_50"
            android:text="@string/apply_four_hint"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/fs_40" />

        <Button
            android:id="@+id/four_next"
            style="@style/ButtonBigStyle"
            android:layout_marginBottom="@dimen/ds_80"
            android:layout_marginTop="@dimen/ds_120"
            android:text="本人已阅读并同意" />
    </LinearLayout>
</ScrollView>