<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_recharge_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_common_selelct_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ds_150"
            android:layout_marginLeft="@dimen/ds_30"
            android:drawableLeft="@mipmap/icon_changtongka"
            android:drawablePadding="@dimen/ds_15"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:singleLine="true"
            android:text="中石化"
            android:textColor="@color/gray_6e"
            android:textSize="@dimen/fs_16sp"/>

        <ImageView
            android:id="@+id/item_common_selelct_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ds_30"
            android:src="@mipmap/icon_recommand"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/ds_30"
            android:src="@mipmap/btn_tick_on"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:layout_marginLeft="@dimen/ds_30"
        android:layout_marginRight="@dimen/ds_30"
        android:background="@color/gray_e3"
        android:layerType="software"/>
</LinearLayout>
