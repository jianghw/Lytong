<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--头部banner-->
    <RelativeLayout
        android:id="@+id/ry_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_528">

        <com.tzly.ctcyh.router.custom.banner.ConvenientBanner
            android:id="@+id/custom_convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/include_unimpeded_title" />
    </RelativeLayout>

    <!--导航控件-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:background="@color/res_color_white"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_160"/>

    <!--<android.support.v4.view.ViewPager
        android:background="@color/res_color_white"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_180" />

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" />-->

    <!--小广播-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_100"
        android:background="@color/res_color_white">

        <ImageView
            android:id="@+id/img_trumpet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/res_x_30"
            android:src="@mipmap/icon_toutiao" />

        <ImageView
            android:id="@+id/img_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_trumpet"
            android:layout_toRightOf="@+id/img_trumpet"
            android:src="@mipmap/icon_dot_sel"
            android:visibility="gone" />

        <com.zantong.mobilecttx.widght.MainScrollUpAdvertisementView
            android:id="@+id/custom_grapevine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_trumpet"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray_99" />
    </RelativeLayout>

    <com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
        android:id="@+id/custom_violation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_430"
        android:background="@color/res_color_gray_f8"
        app:icvp_interpolator="@android:anim/accelerate_decelerate_interpolator"
        app:icvp_max_page_scale="0.84"
        app:icvp_medium_scaled="true"
        app:icvp_min_page_scale="0.6"
        app:icvp_center_page_scale_offset="20dp"
        app:icvp_min_page_scale_offset="3dp"
        app:icvp_scroll_duration="300" />
</LinearLayout>
