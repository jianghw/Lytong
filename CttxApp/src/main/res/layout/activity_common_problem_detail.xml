<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/common_base_color"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/common_problem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fs_60"
        android:gravity="center"
        android:layout_marginTop="@dimen/ds_40"
        android:textColor="@color/gray_25"/>

    <TextView
        android:id="@+id/common_problem_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/ds_24"
        android:paddingRight="@dimen/ds_60"
        android:paddingLeft="@dimen/ds_60"
        android:paddingTop="@dimen/ds_30"
        android:textSize="@dimen/fs_50"
        android:textColor="@color/gray_66"/>

</LinearLayout>
