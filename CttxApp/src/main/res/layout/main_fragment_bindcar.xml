<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_bindcar_layout"
    android:background="@mipmap/bg_addcar"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bindcar_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_60"
        android:layout_marginTop="@dimen/ds_60"
        android:layout_marginBottom="@dimen/ds_30"
        android:textColor="@color/white"
        android:textSize="@dimen/fs_60" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ds_60"
        android:paddingRight="@dimen/ds_60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="罚款(元)"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_42"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_30"
                android:layout_weight="1"
                android:text="扣分"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_42"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="违章次数"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_42"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_bindercar_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_51"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_bindercar_cent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_30"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_51"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/fragment_bindercar_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_51"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>