<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_browser_title"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_144"
        android:background="@color/red"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_browser_pay_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:drawablePadding="@dimen/ds_6"
            android:gravity="center"
            android:paddingLeft="@dimen/ds_30"
            android:paddingRight="@dimen/ds_30"
            android:text="@string/common_back"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_51" />


        <TextView
            android:id="@+id/activity_browser_pay_title"
            android:layout_width="@dimen/ds_360"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_20"
            android:maxLines="1"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_54" />

    </RelativeLayout>

    <WebView
        android:id="@+id/activity_browser_pay_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>