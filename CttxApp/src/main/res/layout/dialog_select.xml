<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/dialog_bg_shape_white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_select_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ds_30"
        android:gravity="center"
        android:text="对话框标题"
        android:textSize="@dimen/fs_18sp"
        android:textStyle="bold"/>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/dialog_select_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/ray_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_60"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/fs_18sp"/>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds_30"
            android:drawablePadding="@dimen/ds_30"
            android:drawableRight="@mipmap/btn_rightarrow"
            android:gravity="center"
            android:text="详情"
            android:textSize="@dimen/fs_18sp"/>
    </RelativeLayout>
</LinearLayout>