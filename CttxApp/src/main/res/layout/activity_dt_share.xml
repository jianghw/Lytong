<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_fxfx"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_540"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="@dimen/ds_360"
            android:layout_height="@dimen/ds_360"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/app_icon"/>

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ds_50"
            android:background="@mipmap/btn_fxfx"
            android:text="去邀请好友"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fs_18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友报名付款成功后您可以获得100元的现金返现"
            android:textColor="@color/colorTvRed_f33"
            android:textSize="@dimen/fs_16sp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_where_cash"
            android:textColor="@color/colorTvCyan_08"
            android:textSize="@dimen/fs_16sp"
            android:visibility="invisible"/>
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
