        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_30"
            android:background="@color/colorBgGray_f8"/>
        <!--支付方式-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_135"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="支付方式"
            android:textColor="@color/colorTvBlue_59b"
            android:textSize="@dimen/fs_16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_1"
            android:layout_marginLeft="@dimen/ds_45"
            android:layout_marginRight="@dimen/ds_45"
            android:background="@color/colorLineGray_e6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_120">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ds_45"
                android:text="银联卡支付"
                android:textColor="@color/colorTvBlack_4d"
                android:textSize="@dimen/fs_16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ds_45"
                android:text="不可更改"
                android:textColor="@color/colorTvRed_f33"
                android:textSize="@dimen/fs_16sp"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_180"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_45"
            android:text="订单金额"
            android:textColor="@color/colorTvBlack_4d"
            android:textSize="@dimen/fs_16sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_45"
            android:layout_toRightOf="@+id/tv_price_title"
            android:text="订单金额"
            android:textColor="@color/colorTvRed_f33"
            android:textSize="@dimen/fs_16sp"/>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="@dimen/ds_360"
            android:layout_height="@dimen/ds_180"
            android:layout_alignParentRight="true"
            android:background="@color/colorTvBlue_59b"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fs_18sp"/>
    </RelativeLayout>
</RelativeLayout>