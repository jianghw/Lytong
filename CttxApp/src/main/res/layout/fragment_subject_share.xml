<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/bg_kemuyaoqing"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_540"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_scan_true"
            android:layout_width="@dimen/ds_360"
            android:layout_height="@dimen/ds_360"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_global_app"/>

        <Button
            android:id="@+id/btn_pay_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/ds_25"
            android:layout_marginTop="@dimen/ds_50"
            android:background="@drawable/bg_sel_apply_submit"
            android:text="去邀请好友"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fs_18sp"/>

    </LinearLayout>

    <!--信息显示-->
    <LinearLayout
        android:layout_width="@dimen/ds_900"
        android:layout_height="@dimen/ds_210"
        android:layout_marginTop="@dimen/ds_75"
        android:background="@drawable/shape_bg_course_bule"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/ds_36">

            <TextView
                android:id="@+id/tv_people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="@color/colorTvYellow_f100"
                android:textSize="@dimen/fs_18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_25"
                android:layout_toRightOf="@+id/tv_people_count"
                android:text="人"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fs_16sp"/>

            <TextView
                android:id="@+id/tv_invited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_people_count"
                android:layout_centerHorizontal="true"
                android:text="已经邀请"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fs_16sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/ds_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/ds_36"
            android:layout_marginTop="@dimen/ds_36"
            android:background="@color/colorWhite"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.01"
            android:paddingTop="@dimen/ds_36">

            <TextView
                android:id="@+id/tv_people_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="@color/colorTvYellow_f100"
                android:textSize="@dimen/fs_18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_25"
                android:layout_toRightOf="@+id/tv_people_pay"
                android:text="人"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fs_16sp"/>

            <TextView
                android:id="@+id/tv_payed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_people_pay"
                android:layout_centerHorizontal="true"
                android:text="已成功支付"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fs_16sp"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>