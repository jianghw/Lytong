<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pt_320">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_card_bg" />

    <TextView
        android:id="@+id/tv_plate_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pt_60"
        android:gravity="center"
        android:text="违章查询、扣分加缴费"
        android:textColor="@color/res_color_black_7f"
        android:textSize="@dimen/pt_30"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_motorcycle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_plate_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pt_30"
        android:gravity="center"
        android:text="一步完成、仅需10秒"
        android:textColor="@color/res_color_black_7f"
        android:textSize="@dimen/pt_30"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/pt_60"
        android:src="@drawable/bg_sel_car_default" />

</RelativeLayout>

