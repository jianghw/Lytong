<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/pt_20"
        app:cardElevation="@dimen/pt_16"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pt_360"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@mipmap/card_bg">

                <TextView
                    android:id="@+id/tv_plate_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/pt_30"
                    android:layout_marginTop="@dimen/pt_30"
                    android:gravity="center"
                    android:text="违章查询、扣分加缴费"
                    android:textColor="@color/res_color_white"
                    android:textSize="@dimen/pt_40"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_motorcycle_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/tv_plate_number"
                    android:layout_marginLeft="@dimen/pt_30"
                    android:gravity="center"
                    android:text="一步完成、仅需10秒"
                    android:textColor="@color/res_color_white"
                    android:textSize="@dimen/pt_40"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_query"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/bg_sel_car_default" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>