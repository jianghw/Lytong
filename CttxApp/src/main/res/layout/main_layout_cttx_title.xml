<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/title_kong"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:background="@color/trans"
        android:visibility="gone">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title"
        style="@style/TopBar"
        android:layout_height="48dip"
        android:layout_below="@id/title_kong">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/trans">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_back"
                    style="@style/TopBarText"
                    android:layout_width="@dimen/ds_180"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="取消"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/titleTv"
                    style="@style/TopBarTexttitle"
                    android:layout_centerHorizontal="true"
                    android:text="@string/main_app_name"/>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleTv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dip"
                    android:text="@string/main_app_title_welcome"
                    android:textColor="@color/res_color_white"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:text=""
                android:textSize="16sp"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_image_right"
                android:layout_width="45dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/image_right"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_centerInParent="true"
                    android:visibility="visible"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:textColor="@color/sel_tv_color_wt"
                android:textSize="16sp"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>