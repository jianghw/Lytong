<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/ds_60"
    android:paddingRight="@dimen/ds_60"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/ds_120"
        android:layout_height="@dimen/ds_120"
        android:background="@mipmap/app_icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ds_30"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_51"
            android:text="畅通车友会" />

        <TextView
            android:id="@+id/notification_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ds_30"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_45"
            android:text="您的记分周期需要更新啦" />
    </LinearLayout>
</LinearLayout>