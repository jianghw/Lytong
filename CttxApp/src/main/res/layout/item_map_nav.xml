<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ds_180"
        android:paddingLeft="@dimen/ds_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_map_imageview"
            android:layout_width="@dimen/ds_120"
            android:layout_height="@dimen/ds_120"
            android:background="@mipmap/loading_image_failed" />

        <TextView
            android:id="@+id/item_map_appname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/ds_30"
            android:gravity="center_vertical"
            android:textColor="@color/gray_25"
            android:textSize="@dimen/fs_51"
            android:text="百度" />
    </LinearLayout>

    <include layout="@layout/view_line3" />
</LinearLayout>