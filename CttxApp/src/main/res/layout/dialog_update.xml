<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/line_title"
    android:background="@drawable/dialog_bg_shape_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/black_word"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/ds_30"
        android:gravity="center"
        android:text="对话框标题"
        android:textStyle="bold"
        android:textSize="@dimen/fs_51" />

    <TextView
        android:id="@+id/dialog_msg"
        style="@style/appblack_word"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="@dimen/ds_30"
        android:paddingTop="@dimen/ds_30"
        android:gravity="center"
        android:textSize="@dimen/fs_42"
        android:text="对话框内容" />

    <LinearLayout
        style="@style/bottom_line2"
        android:layout_marginTop="10dp"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btn1"
            style="@style/appblack_word"
            android:layout_width="0dip"
            android:layout_height="@dimen/ds_126"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/fs_48"
            android:text="确  定"
            android:textColor="@color/color_blue_light" />

        <LinearLayout
            android:id="@+id/line"
            style="@style/vertical_bottom_line2"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/dialog_btn2"
            style="@style/appblack_word"
            android:layout_width="0dip"
            android:layout_height="@dimen/ds_126"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/fs_48"
            android:text="取  消"
            android:textColor="@color/color_blue_light" />
    </LinearLayout>
</LinearLayout>