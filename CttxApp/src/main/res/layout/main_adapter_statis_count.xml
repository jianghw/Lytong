<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds_144">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_114"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/ds_24"
        android:layout_marginRight="@dimen/ds_24"
        android:background="@drawable/selector_item_shape_red_gray">

        <TextView
            android:id="@+id/tv_name"
            android:textColor="@color/res_color_red_f3"
            android:textSize="@dimen/fs_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_24"
            tools:text="@string/main_tv_count_share" />

        <TextView
            android:id="@+id/tv_count"
            android:textColor="@color/res_color_black_4d"
            android:textSize="@dimen/fs_14sp"
            android:layout_marginLeft="@dimen/ds_24"
            android:layout_marginRight="@dimen/ds_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/main_tv_count_share" />
    </LinearLayout>

</RelativeLayout>