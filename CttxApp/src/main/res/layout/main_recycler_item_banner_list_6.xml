<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_banner"
    android:layout_width="@dimen/pt_140"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="@dimen/pt_20"
        android:layout_width="@dimen/pt_80"
        android:layout_height="@dimen/pt_80"
        android:src="@mipmap/ic_global_app"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:textColor="@color/res_color_black_4d"
        android:layout_marginTop="@dimen/pt_20"
        android:singleLine="true"
        android:textSize="@dimen/pt_26"
        tools:text="加油充值中" />
</RelativeLayout>