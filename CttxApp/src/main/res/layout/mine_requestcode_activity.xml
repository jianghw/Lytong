<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_base_color"
    android:orientation="vertical">

    <EditText
        android:id="@+id/request_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_144"
        android:layout_marginTop="@dimen/ds_45"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="11"
        android:textCursorDrawable="@drawable/color_cursor"
        android:hint="请输邀请码(对方注册手机号码)"
        android:textSize="@dimen/ds_48"
        android:paddingLeft="@dimen/ds_48"
        android:paddingRight="@dimen/ds_48" />

    <Button
        android:id="@+id/request_commit"
        style="@style/ButtonBigStyle"
        android:layout_below="@id/underline1"
        android:layout_marginTop="@dimen/ds_72"
        android:text="提交"
        android:textSize="@dimen/ds_54"
        android:textColor="@color/next_btn_selector" />
</LinearLayout>