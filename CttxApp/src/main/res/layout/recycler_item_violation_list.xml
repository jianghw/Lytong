<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/pt_30"
    android:layout_marginRight="@dimen/pt_30"
    android:layout_marginTop="@dimen/pt_20"
    app:cardBackgroundColor="@color/res_color_white"
    app:cardCornerRadius="@dimen/pt_8"
    app:cardElevation="@dimen/pt_2"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_marginRight="@dimen/pt_30"
            android:layout_marginTop="@dimen/pt_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章时间:"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pt_20"
                android:layout_marginRight="@dimen/pt_20"
                android:layout_weight="1"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28"
                tools:text="违章时间违章时违章时间" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pt_20"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28"
                tools:text="违章时" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_marginRight="@dimen/pt_30"
            android:layout_marginTop="@dimen/pt_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章地点:"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28" />

            <TextView
                android:id="@+id/tv_adr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pt_20"
                android:layout_weight="1"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28"
                tools:text="违章时间违章时违章时间" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_marginRight="@dimen/pt_30"
            android:layout_marginTop="@dimen/pt_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章行为:"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28" />

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pt_20"
                android:layout_weight="1"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28"
                tools:text="违章时间违章时违章时间" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_marginRight="@dimen/pt_30"
            android:layout_marginTop="@dimen/pt_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="罚款金额:"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pt_20"
                android:layout_weight="1"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28"
                tools:text="违章时间违章时违章时间" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pt_30"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_marginRight="@dimen/pt_30"
            android:layout_marginTop="@dimen/pt_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扣分情况:"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pt_20"
                android:layout_weight="1"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_28"
                tools:text="违章时间违章时违章时间" />
        </LinearLayout>

        <!--分割线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pt_1"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_marginRight="@dimen/pt_30"
            android:background="@color/res_color_gray_e6" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="@dimen/pt_140"
            android:layout_height="@dimen/pt_50"
            android:layout_gravity="right"
            android:layout_margin="@dimen/pt_30"
            android:background="@drawable/shape_sol_str_cor_red"
            android:gravity="center"
            android:textColor="@color/res_color_red_f3"
            android:textSize="@dimen/pt_28"
            android:text="去处理" />
    </LinearLayout>

</android.support.v7.widget.CardView>
