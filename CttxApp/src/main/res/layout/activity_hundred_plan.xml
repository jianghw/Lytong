<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img_hundred_plan_banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@mipmap/img_hundredplan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/ds_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有"/>

        <TextView
            android:id="@+id/hundred_plan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/res_color_red_f3"
            android:textSize="@dimen/fs_150"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人报名参加!"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hundred_plan_unsign_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ds_30"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ds_30"
            android:text="现在报名预约参加4月17日百日无违章活动，百吨汽油等你拿，每周还能参与抽奖"
            android:textColor="@color/res_color_red_f3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_120"
            android:layout_marginBottom="@dimen/ds_30"
            android:layout_marginTop="@dimen/ds_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hundred_plan_selcar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/ds_30"
                android:layout_weight="1"
                android:background="@mipmap/img_hundred_plan_selcar"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ds_300"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_45"/>

            <TextView
                android:id="@+id/hundred_plan_commit"
                android:layout_width="@dimen/ds_180"
                android:layout_height="match_parent"
                android:background="@drawable/btn_plan_selector"
                android:gravity="center"
                android:text="报名"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_51"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ds_30"
            android:text="每位用户报名车辆仅限一辆，报名后不可变更，请慎重选择"
            android:textSize="@dimen/fs_36"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ds_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hundred_plan_addcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名车辆不在列表中？添加新车辆！"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/fs_48"/>

            <ImageView
                android:layout_width="@dimen/ds_48"
                android:layout_height="@dimen/ds_36"
                android:background="@mipmap/icon_gesture"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hundred_plan_sign_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ds_30"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ds_60"
            android:layout_marginTop="@dimen/ds_60"
            android:text="您已报名成功!"
            android:textColor="@color/res_color_red_f3"
            android:textSize="@dimen/fs_48"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ds_30"
            android:text="活动将于4月17号隆重开启，敬请期待"
            android:textColor="@color/gray_33"/>

        <TextView
            android:id="@+id/hundred_plan_sign_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ds_30"
            android:text="报名车辆：128871"
            android:textColor="@color/gray_33"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ds_30"
                android:layout_marginRight="@dimen/ds_30"
                android:text="建议开启推送设置，掌握活动最新动态"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_48"/>

            <TextView
                android:id="@+id/hundred_plan_push_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ds_30"
                android:text="设置"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/fs_48"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/hundred_plan_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/ds_15"
        android:text="活动规则说明"
        android:textColor="@color/common_blue"
        android:textSize="@dimen/fs_48"/>

    <LinearLayout
        android:id="@+id/hundred_plan_query_violation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/ds_15"
        android:visibility="gone">

        <TextView
            android:id="@+id/hundred_plan_query_violation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ds_9"
            android:text="在线违章处理，全程免费，只要10s"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/fs_48"/>

        <ImageView
            android:layout_width="@dimen/ds_48"
            android:layout_height="@dimen/ds_36"
            android:background="@mipmap/icon_gesture"/>
    </LinearLayout>
</LinearLayout>