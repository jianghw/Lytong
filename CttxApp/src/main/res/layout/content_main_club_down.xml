<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/res_color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lay_apply"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_apply"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/x130"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="center"
            android:src="@mipmap/icon_jiaxiao"/>

        <TextView
            android:id="@+id/tv_apply"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="驾校报名"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x1"
        android:layout_height="match_parent"
        android:background="@color/res_color_gray_e6"/>

    <LinearLayout
        android:id="@+id/lay_sparring"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_sparring"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/x130"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="center"
            android:src="@mipmap/icon_peilian"/>

        <TextView
            android:id="@+id/tv_sparring"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="贴心陪练"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x1"
        android:layout_height="match_parent"
        android:background="@color/res_color_gray_e6"/>

    <LinearLayout
        android:id="@+id/lay_subject"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_subject"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/x130"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="center"
            android:src="@mipmap/icon_kemu"/>

        <TextView
            android:id="@+id/tv_subject"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="科目强化"/>
    </LinearLayout>

</LinearLayout>