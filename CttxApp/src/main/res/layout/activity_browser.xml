<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_browser_title"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_144"
        android:background="@color/red"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_browser_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:drawablePadding="@dimen/ds_6"
            android:gravity="center"
            android:paddingLeft="@dimen/ds_30"
            android:paddingRight="@dimen/ds_30"
            android:text="@string/common_back"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_51" />

        <TextView
            android:id="@+id/common_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:paddingLeft="@dimen/ds_30"
            android:paddingRight="@dimen/ds_30"
            android:layout_toRightOf="@+id/common_browser_back"
            android:textSize="@dimen/fs_51"
            android:text="关闭"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/common_browser_title"
            android:layout_width="@dimen/ds_480"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_20"
            android:maxLines="1"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_54" />

        <TextView
            android:id="@+id/common_browser_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="@dimen/ds_30"
            android:paddingRight="@dimen/ds_30"
            android:text=""
            android:textColor="@drawable/common_text_selecter"
            android:textSize="@dimen/fs_48"
            android:visibility="gone" />

    </RelativeLayout>

    <com.zantong.mobilecttx.widght.ProgressWebView
        android:id="@+id/common_browser_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>