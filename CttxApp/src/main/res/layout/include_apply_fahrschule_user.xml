<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <!--驾校报名页面/用户信息输入-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_recruit_down"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.9"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ds_90"
                    android:layout_marginTop="@dimen/ds_66"
                    android:gravity="center"
                    android:text="姓    名"
                    android:textColor="@color/colorTvBlack_08"
                    android:textSize="@dimen/fs_16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ds_90"
                    android:layout_marginTop="@dimen/ds_25"
                    android:gravity="center"
                    android:text="手    机"
                    android:textColor="@color/colorTvBlack_08"
                    android:textSize="@dimen/fs_16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ds_90"
                    android:layout_marginTop="@dimen/ds_25"
                    android:gravity="center"
                    android:text="身份证"
                    android:textColor="@color/colorTvBlack_08"
                    android:textSize="@dimen/fs_16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/ds_36"
                android:layout_weight="2"
                android:orientation="vertical">

                <EditText
                    android:layout_width="@dimen/ds_600"
                    android:layout_height="@dimen/ds_90"
                    android:layout_marginTop="@dimen/ds_66"
                    android:background="@drawable/shape_edit_apply"
                    android:hint="请输入姓名"
                    android:paddingLeft="@dimen/ds_36"
                    android:paddingRight="@dimen/ds_36"
                    android:textSize="@dimen/fs_16sp"/>

                <EditText
                    android:layout_width="@dimen/ds_600"
                    android:layout_height="@dimen/ds_90"
                    android:layout_marginTop="@dimen/ds_25"
                    android:background="@drawable/shape_edit_apply"
                    android:hint="请输入手机号"
                    android:paddingLeft="@dimen/ds_36"
                    android:paddingRight="@dimen/ds_36"
                    android:textSize="@dimen/fs_16sp"
                    tools:text="15770900918"/>

                <EditText
                    android:layout_width="@dimen/ds_600"
                    android:layout_height="@dimen/ds_90"
                    android:layout_marginTop="@dimen/ds_25"
                    android:background="@drawable/shape_edit_apply"
                    android:hint="请输入身份证号"
                    android:maxLength="18"
                    android:paddingLeft="@dimen/ds_36"
                    android:paddingRight="@dimen/ds_36"
                    android:textSize="@dimen/fs_16sp"
                    tools:text="362228198908170032"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ds_65"
            android:background="@drawable/bg_sel_apply_submit"
            android:text="立即报名"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fs_18sp"/>
    </LinearLayout>
</merge>