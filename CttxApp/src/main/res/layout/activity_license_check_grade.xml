        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_168"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_36"
                android:layout_weight="1"
                android:singleLine="true"
                android:drawableRight="@mipmap/icon_common_problem"
                android:text="驾驶证档案编号："
                android:textColor="@color/black_tv_title"
                android:textSize="@dimen/fs_16sp"
                android:id="@+id/textView14" />

            <EditText
                android:id="@+id/edit_archives_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ds_36"
                android:paddingLeft="@dimen/ds_48"
                android:layout_weight="1.2"
                android:background="@null"
                android:cursorVisible="true"
                android:digits="@string/digits_content"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="@color/black_tv_title"
                android:textSize="@dimen/fs_16sp"
                tools:text="12345566667" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_21"
            android:background="#D5D5D5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_168"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_36"
                android:layout_weight="1"
                android:text="初次领证日期："
                android:textColor="@color/black_tv_title"
                android:textSize="@dimen/fs_16sp" />

            <RelativeLayout
                android:id="@+id/rl_date"
                android:layout_width="0dp"
                android:layout_height="@dimen/ds_96"
                android:layout_marginRight="@dimen/ds_36"
                android:layout_weight="1.2"
                android:background="@drawable/bg_tv_date">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds_48"
                    android:textColor="#686868"
                    android:textSize="@dimen/fs_14sp"
                    tools:text="20170408" />

                <ImageView
                    android:layout_width="@dimen/ds_120"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_indicate_date_down" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_21"
            android:background="#D5D5D5" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="@dimen/ds_900"
            android:layout_height="@dimen/ds_138"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ds_120"
            android:background="@drawable/next_btn_shape_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/ds_120"
            android:layout_marginRight="@dimen/ds_120"
            android:layout_marginTop="@dimen/ds_45"
            android:text="@string/tv_license_aty_prompt" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/ds_48"
        android:src="@mipmap/ic_message_bottom" />
