<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/ds_15"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/ds_40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginRight="@dimen/ds_40"
        android:layout_marginTop="@dimen/ds_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/gray_5e"
            android:textSize="@dimen/fs_48"/>

        <TextView
            android:id="@+id/driving_item_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textColor="@color/gray_5e"
            android:textSize="@dimen/fs_48"/>

        <TextView
            android:id="@+id/driving_item_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="new"
            android:textColor="@color/red"
            android:textSize="@dimen/fs_48"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginRight="@dimen/ds_40"
        android:layout_marginTop="@dimen/ds_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单时间："
            android:textColor="@color/gray_5e"
            android:textSize="@dimen/fs_48"/>

        <TextView
            android:id="@+id/driving_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2017-01-25 10:06"
            android:textColor="@color/gray_5e"
            android:textSize="@dimen/fs_48"/>

        <TextView
            android:id="@+id/driving_item_order_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingLeft="@dimen/ds_30"
            android:text="取消"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/fs_48"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginTop="@dimen/ds_40"
        android:text="@string/tv_driving_hint"
        android:textColor="@color/red_normal"
        android:textSize="@dimen/fs_14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginRight="@dimen/ds_40"
        android:layout_marginTop="@dimen/ds_30"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接车地址："
            android:textColor="@color/gray_5e"
            android:textSize="@dimen/fs_48"/>

        <TextView
            android:id="@+id/driving_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陆家嘴东路161号招商局大厦"
            android:textColor="@color/gray_5e"
            android:textSize="@dimen/fs_48"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginRight="@dimen/ds_40"
        android:layout_marginTop="@dimen/ds_30"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券：    "
            android:textColor="@color/gray_5e"
            android:textSize="@dimen/fs_48"/>

        <TextView
            android:id="@+id/driving_item_yhq_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="app用户首单立减30"
            android:textColor="@color/gray_5e"
            android:textSize="@dimen/fs_48"/>

    </LinearLayout>
</LinearLayout>

