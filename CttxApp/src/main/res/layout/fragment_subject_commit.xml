            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_45"
                android:text="手机"
                android:textColor="@color/colorTvBlack_4d"
                android:textSize="@dimen/fs_16sp"/>

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_45"
                android:layout_marginRight="@dimen/ds_45"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:maxLines="1"
                android:minWidth="@dimen/ds_180"
                android:textColor="@color/colorTvBlack_4d"
                android:textColorHint="@color/colorLineGray_e6"
                android:textSize="@dimen/fs_16sp"/>
        </LinearLayout>

