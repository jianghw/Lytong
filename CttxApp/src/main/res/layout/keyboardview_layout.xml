<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#88000000"
        android:visibility="gone"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/key_borad_title"
        android:layout_width="match_parent"
        android:layout_height="46dip">
        <ImageView
            android:layout_width="13.4dip"
            android:layout_height="13.4dip"
            android:layout_marginLeft="16dip"
            android:layout_centerVertical="true"
            android:src="@drawable/sure_pay_popup_close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择车牌所在地区"
            android:layout_centerInParent="true"
            style="@style/open_three_title_style"/>
    </RelativeLayout>
    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/key_borad_title"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyTextColor="@color/white"
        android:keyTextSize="@dimen/sp_32"
        android:visibility="visible" />

</RelativeLayout>

</FrameLayout>