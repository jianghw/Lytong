                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.zantong.mobilecttx.widght.GuideHeaderViewPager
        android:id="@+id/guide_headerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/guide_open"
        android:layout_width="@dimen/ds_400"
        android:layout_height="@dimen/ds_120"
