<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <com.zantong.mobilecttx.guide_v.GuideHeaderViewPager
        android:id="@+id/guide_headerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/guide_open"
        android:background="@drawable/shape_tv_favorable_red"
        android:layout_width="@dimen/pt_260"
        android:layout_height="@dimen/pt_80"
        android:textColor="@color/res_color_red_f3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/pt_36"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/pt_100"
        android:gravity="center"
        android:text="立即开启"/>
</RelativeLayout>