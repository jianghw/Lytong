        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/ds_140"
        android:background="@drawable/shape_blue_btn"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/fs_18sp"
