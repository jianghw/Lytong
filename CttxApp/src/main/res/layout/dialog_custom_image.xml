<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@mipmap/cashreturn_popover"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/ds_45"
        android:layout_height="@dimen/ds_45"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/ds_75"
        android:layout_marginRight="@dimen/ds_60"
        android:src="@mipmap/btn_close"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_45"
        android:layout_marginTop="@dimen/ds_45"
        android:text="返还的现金在哪里查看？"
        android:textColor="@color/colorTvCyan_08"
        android:textSize="@dimen/fs_16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_45"
        android:layout_marginTop="@dimen/ds_45"
        android:text="请关注“畅通卡车友会”公众号"
        android:textColor="@color/colorTvGray_80"
        android:textSize="@dimen/fs_14sp"/>
</LinearLayout>