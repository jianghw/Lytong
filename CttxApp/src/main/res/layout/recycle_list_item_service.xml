<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_service_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_135"
        android:gravity="center"
        android:text="驾校专区"
        android:textColor="@color/colorTvBlack_4d"
        android:textSize="@dimen/fs_18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:background="@color/colorLineGray_e6"/>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/custom_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:background="@color/colorLineGray_e6"/>

    <RelativeLayout
        android:id="@+id/lay_fold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_120">

        <TextView
            android:id="@+id/tv_fold"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ds_120"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/ds_30"
            android:drawableRight="@mipmap/arrow_down"
            android:gravity="center"
            android:text="展开全部"
            android:textColor="@color/colorTvBlack_b3"
            android:textSize="@dimen/fs_16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_45"
        android:background="@color/colorBgGray_f8"/>

</LinearLayout>