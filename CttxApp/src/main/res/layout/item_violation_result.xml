<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ds_30"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/lay_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ds_30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章时间："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_tm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"
                tools:text="2017-05-08 17:31:57"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章地点："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"
                tools:text="奇偶发手机哦个就打发时间佛撒娇覅家手机发山东if健身房
                死哦书法家哦附加赛佛水电费卡收款方式分手的方式杀富济贫发顺丰大师傅孔繁
                森付款扫福克斯分散开付款萨芬咳嗽付款付款扫罚款扣分考试方式可否安排"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章行为："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"
                tools:text="发顺丰水电费水电费范德萨发生大幅度沙发斯蒂芬斯蒂芬水电费水电费顺丰到付水电费发生大幅度发"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="罚款金额："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"
                tools:text="0对对对"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扣分情况："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"
                tools:text="0"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_violation_result_flag"
        android:layout_width="@dimen/ds_144"
        android:layout_height="@dimen/ds_144"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/item_violation_result_pay"
        android:layout_width="@dimen/ds_270"
        android:layout_height="@dimen/ds_90"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lay_content"
        android:layout_margin="@dimen/ds_30"
        android:background="@drawable/shape_red"
        android:text="去处理"
        android:textColor="@color/white"
        android:textSize="@dimen/fs_42"/>
</RelativeLayout>