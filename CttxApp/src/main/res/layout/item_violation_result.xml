<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_420"
                android:layout_marginBottom="@dimen/ds_30"
                android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ds_30">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章时间："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_tm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-05-08 17:31:57"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章地点："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章行为："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="罚款金额："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扣分情况："
                android:textColor="@color/gray_99"
                android:textSize="@dimen/fs_36"/>

            <TextView
                android:id="@+id/item_violation_result_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/fs_36"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_violation_result_flag"
        android:layout_width="@dimen/ds_144"
        android:layout_height="@dimen/ds_144"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/item_violation_result_pay"
        android:layout_width="@dimen/ds_270"
        android:layout_height="@dimen/ds_90"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/ds_30"
        android:background="@drawable/shape_red"
        android:text="去处理"
        android:textColor="@color/white"
        android:textSize="@dimen/fs_42"
        android:visibility="gone"/>
</RelativeLayout>