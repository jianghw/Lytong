<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/pt_20"
    android:layout_marginLeft="@dimen/pt_5"
    android:layout_marginRight="@dimen/pt_5"
    app:cardBackgroundColor="@color/res_color_white"
    app:cardCornerRadius="@dimen/pt_8"
    app:cardElevation="@dimen/pt_2"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:id="@+id/lay_module"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_260"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/pt_20"
            android:textColor="@color/res_color_black_b3"
            android:textSize="@dimen/pt_26"
            tools:text="年检服务" />

        <TextView
            android:id="@+id/tv_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/pt_20"
            android:textColor="@color/res_color_red_f3"
            android:textSize="@dimen/pt_26"
            tools:text="年检服务" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/pt_180"
            android:layout_height="@dimen/pt_120"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/pt_20" />
    </LinearLayout>

</android.support.v7.widget.CardView>
