<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/custom_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/app_icon"/>

    <TextView
        android:id="@+id/tv_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/custom_icon"
        android:singleLine="true"
        android:text="jisodfjofisdjfsdioffdfsdfsdfsdfsdfsdfsdfsd"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_custom_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_custom_title"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/custom_icon"
        android:text="jisodfjofisdjfsdiofffsdffsfsdsdfdfsfsdfdfsdsddsfsdfsdsdfsdfsdfsdfsfsfsdfsdfsfsdfsdfsdfsdfsdfdsfsfsdfdsfsdfs"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_custom_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_custom_content"
        android:layout_margin="8dp"
        android:text="jisodfjofisdjfsdiof"/>

</RelativeLayout>