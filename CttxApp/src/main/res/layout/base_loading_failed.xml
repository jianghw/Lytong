<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_loading_failed_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/base_loading_failed_refresh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_900"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/ds_132"
            android:layout_height="@dimen/ds_132"
            android:src="@drawable/loading_faild_image_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_100"
            android:gravity="center_horizontal"
            android:text="获取数据失败,请点击重试"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/fs_48" />
    </LinearLayout>

</LinearLayout>