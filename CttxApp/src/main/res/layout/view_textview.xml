<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_textview_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds_144"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/ds_45"
    android:paddingRight="@dimen/ds_45">

    <TextView
        android:id="@+id/view_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="标题"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/fs_42" />

    <ImageView
        android:id="@+id/view_textview_flag"
        android:layout_width="@dimen/ds_120"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/selector_illegal_query_notice" />
    <TextView
        android:id="@+id/view_textview_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/fs_42" />
</LinearLayout>
