<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="88dip"
    android:background="@color/res_color_white">

    <ImageView
        android:id="@+id/view_vehicles_image_head"
        android:layout_width="80dip"
        android:layout_height="60dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:src="@mipmap/loading_image_failed"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dip"
        android:layout_toRightOf="@id/view_vehicles_image_head">
        <RelativeLayout
            android:id="@+id/query_listory_car_number_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/query_listory_car_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沪 NB8888"
                android:layout_centerVertical="true"
                style="@style/appmain_color_text_font"/>

            <ImageView
                android:id="@+id/is_pay_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:layout_toRightOf="@id/query_listory_car_number"
                android:src="@mipmap/pay_notice_image"
                android:visibility="gone"/>
        </RelativeLayout>



        <TextView
            android:id="@+id/view_vehicles_penalty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/query_listory_car_number_rl"
            android:text="共计罚款 0元"
            android:layout_marginTop="5dip"
            style="@style/TextTitleSmallStyle"/>
        <TextView
            android:id="@+id/view_vehicles_penalty_point_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_vehicles_penalty_tv"
            android:text="共计罚分 0分"
            android:layout_marginTop="5dip"
            style="@style/TextTitleSmallStyle"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/query_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无违章"
            android:layout_centerVertical="true"
            style="@style/grayColorTextFont"/>
        <ImageView
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_toRightOf="@id/query_history_time"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dip"
            android:layout_marginLeft="6dip"
            android:src="@mipmap/ic_arrow_gray_left"/>

    </RelativeLayout>

    <TextView style="@style/line_left_margin_gray"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>