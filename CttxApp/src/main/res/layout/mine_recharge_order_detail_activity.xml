<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_base_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_120"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ds_30"
        android:paddingRight="@dimen/ds_30">

        <TextView
            android:id="@+id/mine_recharge_order_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="中石化直充100元" />

        <TextView
            android:id="@+id/mine_recharge_order_detail_content_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款" />
    </LinearLayout>

    <include layout="@layout/view_line3" />


    <RelativeLayout
        android:id="@+id/mine_recharge_order_detail_content_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_240"
        android:background="@color/white"
        android:paddingLeft="@dimen/ds_30"
        android:paddingRight="@dimen/ds_30">

        <ImageView
            android:id="@+id/mine_recharge_order_detail_content_img"
            android:layout_width="@dimen/ds_150"
            android:layout_height="@dimen/ds_150"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_zhongshiyou" />

        <TextView
            android:id="@+id/mine_recharge_order_detail_cardnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_30"
            android:layout_marginRight="@dimen/ds_10"
            android:layout_toRightOf="@id/mine_recharge_order_detail_content_img"
            android:textColor="@color/gray_25" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_recharge_order_detail_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingLeft="@dimen/ds_30"
                android:text="100"
                android:textColor="@color/gray_25"
                android:textSize="@dimen/fs_51" />

            <TextView
                android:id="@+id/mine_recharge_order_detail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_30"
                android:paddingLeft="@dimen/ds_30"
                android:text="×1"
                android:textColor="@color/gray_c9"
                android:textSize="@dimen/fs_42" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/view_line3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/ds_45">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="实付款"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/fs_51"
            android:id="@+id/textView8" />

        <TextView
            android:id="@+id/mine_recharge_order_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/red"
            android:textSize="@dimen/fs_60"
            android:textStyle="bold" />
    </LinearLayout>

    <include layout="@layout/view_line3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_30"
        android:background="@color/common_base_color" />

    <include layout="@layout/view_line3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/ds_30">

        <TextView
            android:id="@+id/mine_recharge_order_detail_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ds_30"
            android:text="订单号：24682365981"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/ds_51" />

        <TextView
            android:id="@+id/mine_recharge_order_detail_ordertm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单时间：2017-01-17 10:08:54"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/ds_51" />

        <TextView
            android:id="@+id/mine_recharge_order_detail_paystyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ds_30"
            android:layout_marginTop="@dimen/ds_30"
            android:visibility="gone"
            android:text="支付方式"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/ds_51" />

        <TextView
            android:id="@+id/mine_recharge_order_detail_paytm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="支付时间"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/ds_51" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/mine_recharge_order_option_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_180"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mine_recharge_order_detail_cancel"
            android:layout_width="@dimen/ds_300"
            android:layout_height="@dimen/ds_90"
            android:layout_marginRight="@dimen/ds_30"
            android:background="@drawable/shape_clean_btn"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/gray_b2"
            android:textSize="@dimen/fs_51"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mine_recharge_order_detail_pay"
            android:layout_width="@dimen/ds_300"
            android:layout_height="@dimen/ds_90"
            android:layout_marginRight="@dimen/ds_30"
            android:background="@drawable/shape_red_btn"
            android:gravity="center"
            android:text="安全支付"
            android:textColor="@color/red"
            android:textSize="@dimen/fs_51"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>