<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/res_color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lay_oil"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_oil"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/x130"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="center"
            android:src="@mipmap/ic_wechat"/>

        <TextView
            android:id="@+id/tv_oil"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="微信缴费"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x1"
        android:layout_height="match_parent"
        android:background="@color/res_color_gray_e6"/>

    <LinearLayout
        android:id="@+id/lay_annual"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_annual"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/x130"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="center"
            android:src="@mipmap/ic_alipay"/>

        <TextView
            android:id="@+id/tv_annual"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="支付宝缴费"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x1"
        android:layout_height="match_parent"
        android:background="@color/res_color_gray_e6"/>

    <LinearLayout
        android:id="@+id/lay_violations"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_violations"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/x130"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="center"
            android:src="@mipmap/ic_search"/>

        <TextView
            android:id="@+id/tv_violations"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="违章查询"/>
    </LinearLayout>

</LinearLayout>