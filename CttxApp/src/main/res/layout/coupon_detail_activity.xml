<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_d9">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/ds_48"
        android:src="@mipmap/ic_message_bottom"/>
    <!--可滑动-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ds_48"
            android:paddingRight="@dimen/ds_48"
            android:paddingTop="@dimen/ds_24">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_bg_coupon_red"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/ds_96"
                    android:layout_marginRight="@dimen/ds_96"
                    android:layout_marginTop="@dimen/ds_72"
                    android:background="@mipmap/ic_bg_coupon_center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/ds_84"
                    android:paddingRight="@dimen/ds_84">

                    <TextView
                        android:id="@+id/tv_coupon_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds_48"
                        android:layout_marginRight="@dimen/ds_48"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fs_18sp"
                        tools:text="*******优惠劵ffffffffff"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="@dimen/ds_24"
                        android:layout_marginTop="@dimen/ds_24"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/tv_coupon_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/fs_18sp"
                        tools:text="CISHFISHFOSIFH"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="@dimen/ds_24"
                        android:layout_marginTop="@dimen/ds_24"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/tv_coupon_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fs_14sp"
                        tools:text="到期时间：2017年12月12日"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ds_36"
                    android:singleLine="true"
                    android:text="优惠劵内容"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fs_18sp"/>

                <TextView
                    android:id="@+id/tv_coupon_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ds_72"
                    android:layout_marginLeft="@dimen/ds_96"
                    android:layout_marginRight="@dimen/ds_96"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fs_16sp"
                    tools:text="反倒是水电费是否还是符合是否会撒谎发hdddddddddddddddddddddddddddddddddddddddddddi胡绥芬河是放松放松发顺"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_bg_coupon_bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/ds_96"
                    android:layout_marginTop="@dimen/ds_72"
                    android:singleLine="true"
                    android:text="优惠劵使用方法"
                    android:textColor="@color/black_tv_title"
                    android:textSize="@dimen/fs_18sp"/>

                <TextView
                    android:id="@+id/tv_coupon_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/ds_72"
                    android:layout_marginLeft="@dimen/ds_96"
                    android:layout_marginRight="@dimen/ds_96"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/fs_16sp"
                    tools:text="优惠劵内容来决了几斤几两"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>