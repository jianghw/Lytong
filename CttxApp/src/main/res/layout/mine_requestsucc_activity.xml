<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_base_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/ds_204"
        android:layout_height="@dimen/ds_204"
        android:layout_marginTop="@dimen/ds_72"

        android:background="@mipmap/request_succ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ds_84"
        android:layout_marginTop="@dimen/ds_45"
        android:text="绑定成功" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_144"
        android:background="@color/white"
        android:paddingLeft="@dimen/ds_48"
        android:paddingRight="@dimen/ds_48">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="邀请人"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/fs_48" />

        <TextView
            android:id="@+id/mine_invitation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="cxx"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/fs_48" />
    </RelativeLayout>

    <include layout="@layout/view_line1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_144"
        android:background="@color/white"
        android:paddingLeft="@dimen/ds_48"
        android:paddingRight="@dimen/ds_48">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="邀请时间"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/fs_48" />

        <TextView
            android:id="@+id/mine_invitation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/fs_48" />
    </RelativeLayout>
</LinearLayout>