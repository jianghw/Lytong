<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zantong.mobile"
    android:installLocation="auto">

    <!-- 阿里云推送相关权限 Maven库快速集成可跳过 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!--bugly-->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!--保存资源到SD卡-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 百度地图相关权限  -->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- OpenGLES 2.0 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- 小米通道相关权限 -->
    <permission
        android:name="com.zantong.mobile.permission.MIPUSH_RECEIVE"
        android:protectionLevel="signatureOrSystem" />
    <uses-permission android:name="com.zantong.mobile.permission.MIPUSH_RECEIVE" />
    <!-- 选举使用，当应用有删除或者更新时需要重新选举，复用推送通道 -->
    <uses-permission android:name="android.permission.BROADCAST_PACKAGE_CHANGED" />
    <uses-permission android:name="android.permission.BROADCAST_PACKAGE_REPLACED" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- unavailable in API 23 -->
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 检测联网方式，区分用户设备使用的是2G、3G或是WiFi -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 定位包、导航包需要的额外权限（注：基础权限也需要） -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <application
        android:name="com.zantong.mobile.application.MyApplication"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation|screenLayout"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 启动页面 -->
        <activity
            android:name="com.zantong.mobile.splash_v.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SpalshActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:priority="0">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="geo1" />
            </intent-filter>
        </activity>

        <!-- 主页，这个很吊呀 -->
        <activity
            android:name="com.zantong.mobile.main_v.MainClubActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <!--扫描页面-->
        <activity
            android:name="com.zantong.mobile.cattle.QRCodeScanActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />

        <!-- =======================用户相关页面===================================== -->
        <!-- 登陆页面 -->
        <activity
            android:name="com.zantong.mobile.login_v.LoginActivity"
            android:screenOrientation="portrait" />

        <!-- 注册页面 -->
        <activity
            android:name="com.zantong.mobile.register_v.RegisterActivity"
            android:screenOrientation="portrait" />

        <!-- 重设密码页面 -->
        <activity
            android:name="com.zantong.mobile.reset_v.ResetActivity"
            android:screenOrientation="portrait" />

        <!-- ======================消息模块=========================== -->
        <activity
            android:name="com.zantong.mobile.msg_v.MegDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zantong.mobile.weizhang.activity.ViolationDetails"
            android:screenOrientation="portrait" />
        <!-- =======================输入编码查询违章页面===================================== -->
        <activity
            android:name="com.zantong.mobile.home.activity.Codequery"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.home.activity.CaptureActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <!-- 设置页面 -->
        <activity
            android:name="com.zantong.mobile.user.activity.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.user.activity.HelpActivity"
            android:screenOrientation="portrait" />
        <!-- 个人中心页面 -->
        <activity
            android:name="com.zantong.mobile.user.activity.UserInfoUpdate"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zantong.mobile.user.activity.UpdateNickName"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.user.activity.UpdatePhoneNumber"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.user.activity.FeedbackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.user.activity.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.register_v.Register2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.user.activity.ChangePwdActivity"
            android:screenOrientation="portrait" />

        <!-- 公共列表类 -->
        <activity
            android:name="com.zantong.mobile.common.activity.CommonListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.wxapi.WXEntryActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.car.activity.CarBrandActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.car.activity.CarChooseActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zantong.mobile.chongzhi.activity.RechargeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.map.activity.NavActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent" />

        <activity
            android:name="com.zantong.mobile.common.activity.CommonProblemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.common.activity.CommonProblemDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.user.activity.ProblemFeedbackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.common.activity.CommonTwoLevelMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.chongzhi.activity.RechargeAgreementActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zantong.mobile.msg_v.MegTypeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zantong.mobile.common.activity.OcrCameraActivity"
            android:screenOrientation="landscape" />

        <!-- ========================车辆管理模块================================ -->
        <!-- 车辆管理 -->
        <activity
            android:name="com.zantong.mobile.car.activity.ManageCarActivity"
            android:screenOrientation="portrait" />

        <!-- 绑定车辆 -->
        <activity
            android:name="com.zantong.mobile.car.activity.SetPayCarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.weizhang.activity.ViolationHistoryAcitvity"
            android:screenOrientation="portrait" />

        <!-- ========================违章查询页面================================= -->
        <!-- 违法查询页面 输入 -->
        <activity
            android:name="com.zantong.mobile.weizhang.activity.ViolationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <!-- 违章列表信息显示页面 -->
        <activity
            android:name="com.zantong.mobile.weizhang.activity.ViolationListActivity"
            android:screenOrientation="portrait" />
        <!-- 违章缴费页面 -->
        <activity
            android:name="com.zantong.mobile.weizhang.activity.ViolationPayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.weizhang.activity.LicenseCheckGradeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.weizhang.activity.LicenseDetailActivity"
            android:screenOrientation="portrait" />
        <!-- 缴费须知 -->
        <activity
            android:name="com.zantong.mobile.weizhang.activity.PaymentActivity"
            android:screenOrientation="portrait" />

        <!-- ===================活动模块========================================= -->
        <!-- 活动页面;驾校报名 -->
        <activity
            android:name="com.zantong.mobile.fahrschule.activity.FahrschuleActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />

        <!-- 活动页面;科目强化 -->
        <activity
            android:name="com.zantong.mobile.fahrschule.activity.SubjectActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />

        <!-- 活动页面;陪练预约 -->
        <activity
            android:name="com.zantong.mobile.fahrschule.activity.SparringActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />

        <!-- ===================分享模块========================================= -->
        <!-- 分享模块页面 -->
        <activity
            android:name="com.zantong.mobile.share.activity.ShareParentActivity"
            android:screenOrientation="portrait" />

        <!-- ===================订单模块========================================= -->
        <!-- 我的订单列表页面 -->
        <activity
            android:name="com.zantong.mobile.order.activity.MyOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.order.activity.CattleOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.order.activity.OrderDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.order.activity.AnnualDetailActivity"
            android:screenOrientation="portrait" />
        <!--呼叫快递-->
        <activity
            android:name="com.zantong.mobile.order.activity.OrderExpressActivity"
            android:screenOrientation="portrait" />

        <!--扫描页面-->
        <activity
            android:name="com.zantong.mobile.code_v.WeixinCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.code_v.AlipayCodeActivity"
            android:screenOrientation="portrait" />

        <!-- ====================================浏览器================================ -->
        <activity
            android:name="com.zantong.mobile.browser.BrowserHtmlActivity"
            android:screenOrientation="portrait" />
        <!-- ===================付款web模块========================================= -->
        <!-- 付款web模块页面 -->
        <activity
            android:name="com.zantong.mobile.browser.PayHtmlActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zantong.mobile.browser.PayBrowserActivity"
            android:screenOrientation="portrait" />

        <!-- ===================优惠模块========================================= -->
        <!-- 优惠模块 -->
        <activity
            android:name="com.zantong.mobile.share.activity.CarBeautyActivity"
            android:screenOrientation="portrait" />

        <service android:name="com.zantong.mobile.utils.DateService">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </service>

        <!-- =================================百度地图============================================= -->
        <activity
            android:name="com.zantong.mobile.map.activity.BaiduMapParentActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="${baidu_API_KEY}" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote"></service>

        <!-- =================================阿里推送============================================= -->
        <meta-data
            android:name="com.alibaba.app.appkey"
            android:value="${alibaba_API_KEY}" /> <!-- 请填写你自己的- appKey -->
        <meta-data
            android:name="com.alibaba.app.appsecret"
            android:value="${alibaba_APP_SECRET}" /> <!-- 请填写你自己的appSecret  在应用证书中 -->

        <!-- 消息接收监听器 （用户可自主扩展） -->
        <receiver
            android:name="com.zantong.mobile.push.LytMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.alibaba.push2.action.NOTIFICATION_OPENED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.alibaba.push2.action.NOTIFICATION_REMOVED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.alibaba.sdk.android.push.RECEIVE" />
            </intent-filter>
        </receiver>


        <!-- 7.0拍照适配 -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <!-- 元数据 -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <!-- =================================友盟+适配 appkey============================================= -->
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}" />

    </application>

</manifest>
