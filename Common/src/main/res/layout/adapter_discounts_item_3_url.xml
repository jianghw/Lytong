<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img_bitmap"
        android:layout_width="@dimen/ds_330"
        android:layout_height="@dimen/ds_240"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds_30"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorTvBlack_4d"
        android:textSize="16sp"
        tools:text="dfdfdfdfdf"/>

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds_30"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorTvBlack_b3"
        android:textSize="16sp"
        tools:text="dfdfdfdfdf"/>

</LinearLayout>