<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/ds_15"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img_bitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_220_160"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds_20"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorTvBlack_4d"
        android:textSize="16sp"
        tools:text="dfdfdfdfdf"/>

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds_15"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorTvBlack_b3"
        android:textSize="14sp"
        tools:text="dfdfdfdfdf"/>

</LinearLayout>