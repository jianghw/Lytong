<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/res_x_600"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_coupon_get_bg">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/res_y_50"
            android:text="恭喜您"
            android:textColor="@color/res_color_yellow_f1"
            android:textSize="@dimen/res_fs_36" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/res_y_30"
            android:text="可领取优惠券"
            android:textColor="@color/res_color_white"
            android:textSize="@dimen/res_fs_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_y_140"
            android:layout_below="@+id/tv_2"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/res_x_50"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ic_coupon_white"
                android:padding="@dimen/res_x_20">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/ResTextTheme.16.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textSize="@dimen/res_fs_18"
                    tools:text="满300可减去50" />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/ResTextTheme.14.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_title"
                    android:layout_below="@+id/tv_title"
                    android:maxLines="2"
                    android:singleLine="true"
                    tools:text="券码:" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay_status"
                android:layout_width="@dimen/res_x_160"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_coupon_red">

                <TextView
                    android:id="@+id/tv_unit"
                    style="@style/ResTextTheme.14.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_price"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/res_x_20"
                    android:textSize="@dimen/res_fs_12"
                    tools:text="元" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/res_x_20"
                    android:layout_toLeftOf="@+id/tv_unit"
                    android:singleLine="true"
                    android:textColor="@color/res_color_white"
                    android:textSize="@dimen/res_fs_26"
                    tools:text="10" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="@color/res_color_white"
        android:layout_width="@dimen/res_x_600"
        android:layout_height="@dimen/res_y_100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/ResTextTheme.16.Hint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="放弃" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/res_color_gray_e6" />

        <TextView
            android:id="@+id/tv_submit"
            style="@style/ResTextTheme.16.Red"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="领取" />
    </LinearLayout>

</LinearLayout>
