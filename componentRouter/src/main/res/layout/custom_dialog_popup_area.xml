<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_135"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@mipmap/ic_tv_close"
        android:gravity="center"
        android:paddingRight="@dimen/ds_45"
        android:text="请选择地区"
        android:textColor="@color/colorTvBlue_59b"
        android:textSize="@dimen/fs_16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:layout_marginLeft="@dimen/ds_45"
        android:layout_marginRight="@dimen/ds_45"
        android:background="@color/colorLineGray_e6"/>

    <com.tzly.ctcyh.router.custom.picker.AddressPicker
        android:id="@+id/custom_address_picker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_600"/>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_180"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTvBlue_59b"
        android:gravity="center"
        android:text="确  认"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/fs_18sp"/>

</LinearLayout>