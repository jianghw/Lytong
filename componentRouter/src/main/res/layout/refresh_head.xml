<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/head_view"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#F8F8F8">

    <ImageView
        android:id="@+id/pull_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:src="@mipmap/ic_refresh_down"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="获取数据中..."
        android:textColor="#4D4D4D"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/refreshing_icon"
        android:layout_width="@dimen/res_x_40"
        android:layout_height="@dimen/res_x_40"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/state_tv"
        android:src="@mipmap/ic_refresh_loading"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/state_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/state_tv"
        android:src="@mipmap/ic_load_more_succeed"
        android:visibility="visible"/>


</RelativeLayout>