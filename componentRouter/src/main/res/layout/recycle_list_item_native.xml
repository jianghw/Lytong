<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/res_color_white"
    android:orientation="vertical">

    <!-- 优惠页面 导向本地页面-->

    <!--加油充值-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_180"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_locality_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_oil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/res_color_black_4d"
                    android:textSize="@dimen/pt_30"
                    tools:text="加油充值" />

                <TextView
                    android:id="@+id/tv_oil_click"
                    android:layout_width="@dimen/pt_160"
                    android:layout_height="@dimen/pt_40"
                    android:layout_marginTop="@dimen/pt_30"
                    android:background="@drawable/shape_tv_favorable_red"
                    android:gravity="center"
                    android:textColor="@color/res_color_red_f3"
                    android:textSize="@dimen/pt_24"
                    tools:text="9折优惠" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/pt_30"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_oil"
                    android:layout_width="@dimen/pt_130"
                    android:layout_height="@dimen/pt_130"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_global_app" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/pt_1"
            android:layout_height="match_parent"
            android:background="@color/res_color_gray_e6" />

        <LinearLayout
            android:id="@+id/lay_locality_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/res_color_black_4d"
                    android:textSize="@dimen/pt_30"
                    tools:text="加油充值" />

                <TextView
                    android:id="@+id/tv_insurance_click"
                    android:layout_width="@dimen/pt_160"
                    android:layout_height="@dimen/pt_40"
                    android:layout_marginTop="@dimen/pt_30"
                    android:background="@drawable/shape_tv_favorable_red"
                    android:gravity="center"
                    android:textColor="@color/res_color_red_f3"
                    android:textSize="@dimen/pt_24"
                    tools:text="9 折起" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/pt_30"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_insurance"
                    android:layout_width="@dimen/pt_130"
                    android:layout_height="@dimen/pt_130"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_global_app" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_1"
        android:background="@color/res_color_gray_e6" />
    <!--第二列表-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_200"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_native_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_native_1"
                android:layout_width="@dimen/pt_130"
                android:layout_height="@dimen/pt_130"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/pt_10"
                android:src="@mipmap/ic_global_app" />

            <TextView
                android:id="@+id/tv_native_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/pt_10"
                android:gravity="center"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_30"
                tools:text="购车贷款" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/pt_1"
            android:layout_height="match_parent"
            android:background="@color/res_color_gray_e6" />

        <LinearLayout
            android:id="@+id/lay_native_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_native_2"
                android:layout_width="@dimen/pt_130"
                android:layout_height="@dimen/pt_130"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/pt_10"
                android:src="@mipmap/ic_global_app" />

            <TextView
                android:id="@+id/tv_native_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/pt_10"
                android:gravity="center"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_30"
                tools:text="购车贷款" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/pt_1"
            android:layout_height="match_parent"
            android:background="@color/res_color_gray_e6" />

        <LinearLayout
            android:id="@+id/lay_native_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_native_3"
                android:layout_width="@dimen/pt_130"
                android:layout_height="@dimen/pt_130"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/pt_10"
                android:src="@mipmap/ic_global_app" />

            <TextView
                android:id="@+id/tv_native_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/pt_10"
                android:gravity="center"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_30"
                tools:text="购车贷款" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/pt_1"
            android:layout_height="match_parent"
            android:background="@color/res_color_gray_e6" />

        <LinearLayout
            android:id="@+id/lay_native_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_native_4"
                android:layout_width="@dimen/pt_130"
                android:layout_height="@dimen/pt_130"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/pt_10"
                android:src="@mipmap/ic_global_app" />

            <TextView
                android:id="@+id/tv_native_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/pt_10"
                android:gravity="center"
                android:textColor="@color/res_color_black_4d"
                android:textSize="@dimen/pt_30"
                tools:text="购车贷款" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>