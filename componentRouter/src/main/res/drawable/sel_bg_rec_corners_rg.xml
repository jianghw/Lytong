<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--有圆角的点击效果-->
    <item android:drawable="@drawable/shape_rec_corners_r_true" android:state_pressed="true"/>
    <item android:drawable="@drawable/shape_rec_corners_r_true" android:state_selected="true"/>
    <item android:drawable="@drawable/shape_rec_corners_r_true" android:state_checked="true"/>
    <!--默认状态下-->
    <item android:drawable="@drawable/shape_rec_corners_gradient_r_false"
          android:state_enabled="true" android:state_pressed="false"/>
    <!--不可点击状态下-->
    <item android:drawable="@drawable/shape_rec_corners_b_false"
          android:state_enabled="false" android:state_pressed="false"/>
</selector>