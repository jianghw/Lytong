<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_y_220"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_notice"
        style="@style/ResTextTheme.14.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/res_color_white"
        android:gravity="left"
        android:padding="@dimen/res_x_30"
        android:text="@string/cargo_bid_oil_tip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/res_y_30"
        android:background="@color/res_color_white"
        android:orientation="vertical">

        <TextView
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_y_80"
            android:layout_marginLeft="@dimen/res_x_30"
            android:gravity="center_vertical"
            android:text="购卡金额（包含邮费）" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/res_x_15"
            android:paddingRight="@dimen/res_x_15" />

        <TextView
            android:id="@+id/tv_bid"
            style="@style/ResTextTheme.14.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/res_y_30"
            android:layout_marginLeft="@dimen/res_x_30"
            android:gravity="left"
            android:lineSpacingMultiplier="1.4"
            android:text="@string/cargo_bid_oil_card" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_y_80"
        android:layout_marginTop="@dimen/res_y_20"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/res_x_30"
        android:paddingRight="@dimen/res_x_30">

        <TextView
            style="@style/ResTextTheme.16.Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="收件人联系方式" />
    </RelativeLayout>

    <TextView style="@style/cargo_line_gray_all" />

    <!--姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_y_80"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/res_x_30"
        android:paddingRight="@dimen/res_x_30">

        <TextView
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名" />

        <EditText
            android:id="@+id/edt_name"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/res_x_30"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入姓名"
            android:maxLength="20"
            android:maxLines="1"
            android:minWidth="@dimen/ds_180"
            android:textColorHint="@color/colorLineGray_e6" />
    </LinearLayout>

    <TextView style="@style/cargo_line_gray" />

    <!--手机号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_y_80"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/res_x_30"
        android:paddingRight="@dimen/res_x_30">

        <TextView
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号" />

        <EditText
            android:id="@+id/edit_phone"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/res_x_30"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="16"
            android:maxLines="1"
            android:minWidth="@dimen/ds_180"
            android:textColorHint="@color/colorLineGray_e6" />
    </LinearLayout>

    <TextView style="@style/cargo_line_gray" />

    <!--所在地区-->
    <RelativeLayout
        android:id="@+id/lay_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_y_80"
        android:background="@drawable/sel_item_solid_gray"
        android:paddingLeft="@dimen/res_x_30"
        android:paddingRight="@dimen/res_x_30">

        <TextView
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="所在地区" />

        <ImageView
            android:id="@+id/img_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_rightarrow" />

        <TextView
            android:id="@+id/tv_area"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/res_x_30"
            android:layout_marginRight="@dimen/res_x_30"
            android:layout_toLeftOf="@+id/img_brand"
            android:hint="请选择地区"
            android:singleLine="true"
            android:textColorHint="@color/colorLineGray_e6" />

    </RelativeLayout>

    <TextView style="@style/cargo_line_gray" />

    <EditText
        android:id="@+id/edit_detailed_address"
        style="@style/ResTextTheme.16.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_270"
        android:background="@color/colorWhite"
        android:gravity="top"
        android:hint="请输入详细地址"
        android:maxEms="60"
        android:maxLength="60"
        android:maxLines="3"
        android:padding="@dimen/res_x_30"
        android:textColorHint="@color/colorLineGray_e6" />

    <TextView
        style="@style/ResTextTheme.14.Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/res_x_30"
        android:gravity="left|center_vertical"
        android:text="@string/cargo_tv_97_date" />

    <Button
        android:id="@+id/btn_commit"
        style="@style/ResButtonTheme.Single"
        android:layout_marginBottom="@dimen/res_y_45"
        android:layout_marginLeft="@dimen/res_x_30"
        android:layout_marginRight="@dimen/res_x_30"
        android:layout_marginTop="@dimen/res_y_60"
        android:text="申请办卡" />
</LinearLayout>