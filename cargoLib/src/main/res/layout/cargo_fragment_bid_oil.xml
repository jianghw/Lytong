<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_80"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_80"
        android:layout_marginTop="@dimen/pt_20"
        android:background="@color/res_color_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/pt_30"
        android:text="购卡金额（包含邮费和工本费）"
        android:textColor="@color/res_color_black_4d"
        android:textSize="@dimen/pt_26" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/res_color_white"
        android:paddingLeft="@dimen/pt_15"
        android:paddingRight="@dimen/pt_15" />

    <TextView
        android:id="@+id/tv_bid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/res_color_white"
        android:gravity="left"
        android:lineSpacingMultiplier="1.4"
        android:paddingBottom="@dimen/pt_30"
        android:paddingLeft="@dimen/pt_30"
        android:text="@string/cargo_bid_oil_card"
        android:textColor="@color/res_color_black_4d"
        android:textSize="@dimen/pt_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_80"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/pt_20"
        android:background="@color/res_color_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/pt_30"
        android:text="收件人联系方式"
        android:textColor="@color/res_color_red_f3"
        android:textSize="@dimen/pt_26" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_1"
        android:background="@color/res_color_gray_e6" />

    <!--姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_80"
        android:background="@color/res_color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/pt_30"
        android:paddingRight="@dimen/pt_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/res_color_black_4d"
            android:textSize="@dimen/pt_28" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入姓名"
            android:maxLength="20"
            android:maxLines="1"
            android:minWidth="@dimen/pt_180"
            android:textColor="@color/res_color_black_4d"
            android:textColorHint="@color/res_color_black_e5"
            android:textSize="@dimen/pt_28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_1"
        android:layout_marginLeft="@dimen/pt_30"
        android:background="@color/res_color_gray_e6" />

    <!--手机号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_80"
        android:background="@color/res_color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/pt_30"
        android:paddingRight="@dimen/pt_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/res_color_black_4d"
            android:textSize="@dimen/pt_28" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="16"
            android:maxLines="1"
            android:minWidth="@dimen/pt_180"
            android:textColor="@color/res_color_black_4d"
            android:textColorHint="@color/res_color_black_e5"
            android:textSize="@dimen/pt_28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_1"
        android:layout_marginLeft="@dimen/pt_30"
        android:background="@color/res_color_gray_e6" />

    <!--所在地区-->
    <RelativeLayout
        android:id="@+id/lay_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_80"
        android:background="@drawable/sel_item_solid_gray"
        android:paddingLeft="@dimen/pt_30"
        android:paddingRight="@dimen/pt_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="所在地区"
            android:textColor="@color/res_color_black_4d"
            android:textSize="@dimen/pt_28" />

        <ImageView
            android:id="@+id/img_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_rightarrow" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_marginRight="@dimen/pt_30"
            android:layout_toLeftOf="@+id/img_brand"
            android:hint="请选择地区"
            android:singleLine="true"
            android:textColor="@color/res_color_black_4d"
            android:textColorHint="@color/res_color_black_e5"
            android:textSize="@dimen/pt_28" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_1"
        android:layout_marginLeft="@dimen/pt_30"
        android:background="@color/res_color_gray_e6" />

    <EditText
        android:id="@+id/edit_detailed_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_280"
        android:background="@color/res_color_white"
        android:gravity="top"
        android:hint="请输入详细地址"
        android:maxEms="60"
        android:maxLength="60"
        android:maxLines="3"
        android:padding="@dimen/pt_30"
        android:textColor="@color/res_color_black_4d"
        android:textColorHint="@color/res_color_black_e5"
        android:textSize="@dimen/pt_28" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pt_30"
        android:gravity="left|center_vertical"
        android:text="@string/cargo_tv_97_date"
        android:textColor="@color/res_color_red_f3"
        android:textSize="@dimen/pt_24" />

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pt_20"
        android:background="@color/res_color_white"
        android:gravity="left"
        android:padding="@dimen/pt_20"
        android:text="@string/cargo_bid_oil_tip"
        android:textColor="@color/res_color_black_4d"
        android:textSize="@dimen/pt_26" />

    <Button
        android:id="@+id/btn_commit"
        style="@style/ResButtonTheme.Single"
        android:layout_marginBottom="@dimen/pt_60"
        android:layout_marginTop="@dimen/pt_40"
        android:text="申请办卡" />
</LinearLayout>