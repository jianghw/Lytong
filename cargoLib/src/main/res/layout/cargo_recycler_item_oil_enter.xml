<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_oil_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_97" />

    <TextView
        android:id="@+id/tv_line"
        android:padding="@dimen/pt_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cargo_tv_inquiry"
        android:textColor="@color/res_color_blue_0b"
        android:textSize="@dimen/pt_24" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/res_color_black_b3"
        android:textSize="@dimen/pt_24"
        tools:text="2000 已办卡" />
</RelativeLayout>