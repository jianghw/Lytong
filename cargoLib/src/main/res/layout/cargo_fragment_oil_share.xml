<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt_300"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/pt_30"
        android:text="分享给好友"
        android:textColor="@color/res_color_red_f3"
        android:textSize="@dimen/pt_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/pt_30"
            android:drawableTop="@mipmap/ic_wx_wechat"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/res_color_black_4d"
            android:textSize="@dimen/pt_26" />

        <TextView
            android:id="@+id/tv_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/pt_30"
            android:drawableTop="@mipmap/ic_wx_friends"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/res_color_black_4d"
            android:textSize="@dimen/pt_26" />

        <TextView
            android:id="@+id/tv_face"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/pt_30"
            android:drawableTop="@mipmap/ic_facetoface"
            android:gravity="center"
            android:text="面对面邀请"
            android:textColor="@color/res_color_black_4d"
            android:textSize="@dimen/pt_26" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pt_50"
        android:layout_marginRight="@dimen/pt_50"
        android:layout_marginTop="@dimen/pt_60"
        android:background="@drawable/shape_sol_str_cor_gray"
        android:orientation="vertical">
        <!--头部-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pt_140"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_count_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/pt_10"
                    android:textColor="@color/res_color_red_f3"
                    android:textSize="@dimen/pt_60"
                    tools:text="500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_count_person"
                    android:layout_margin="@dimen/pt_20"
                    android:layout_toRightOf="@+id/tv_count_person"
                    android:text="人"
                    android:textColor="@color/res_color_black_7f"
                    android:textSize="@dimen/pt_26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_count_person"
                    android:layout_centerHorizontal="true"
                    android:text="已邀请"
                    android:textColor="@color/res_color_black_7f"
                    android:textSize="@dimen/pt_26" />

            </RelativeLayout>
            <!--分割线-->
            <LinearLayout
                android:layout_width="@dimen/pt_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/pt_20"
                android:layout_marginTop="@dimen/pt_20"
                android:background="@color/res_color_gray_e6" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_count_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/pt_10"
                    android:textColor="@color/res_color_red_f3"
                    android:textSize="@dimen/pt_60"
                    tools:text="500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_count_price"
                    android:layout_margin="@dimen/pt_20"
                    android:layout_toRightOf="@+id/tv_count_price"
                    android:text="张"
                    android:textColor="@color/res_color_black_7f"
                    android:textSize="@dimen/pt_26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_count_price"
                    android:layout_centerHorizontal="true"
                    android:text="已领取优惠券"
                    android:textColor="@color/res_color_black_7f"
                    android:textSize="@dimen/pt_26" />

            </RelativeLayout>
        </LinearLayout>

        <!--分割线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pt_1"
            android:layout_marginLeft="@dimen/pt_30"
            android:layout_marginRight="@dimen/pt_30"
            android:background="@color/res_color_gray_e6" />


        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pt_400" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pt_50"
        android:text="——  活动规则  ——"
        android:textColor="@color/res_color_black_4d"
        android:textSize="@dimen/pt_26" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/pt_50"
        android:layout_marginRight="@dimen/pt_50"
        android:layout_marginTop="@dimen/pt_20"
        android:gravity="left"
        android:textColor="@color/res_color_black_4d"
        android:textSize="@dimen/pt_26"
        tools:text="——  活动规则  ——" />

</LinearLayout>