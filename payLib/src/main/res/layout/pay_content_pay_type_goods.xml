    <LinearLayout
        android:id="@+id/lay_linear_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/res_x_30"
        android:layout_marginRight="@dimen/res_x_30"
        android:layout_marginTop="@dimen/res_x_30"
        android:orientation="horizontal">

        <TextView
            style="@style/ResTextTheme.16.Subtitle.width"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="订单号"/>

        <TextView
            android:id="@+id/tv_order"
            style="@style/ResTextTheme.16.Subtitle.width"
            android:layout_marginLeft="@dimen/res_x_60"
