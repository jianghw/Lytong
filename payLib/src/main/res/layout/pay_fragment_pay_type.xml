<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lay_linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/res_y_30"
        android:background="@color/res_color_white"
        android:orientation="vertical">

        <include layout="@layout/pay_content_pay_type_goods" />

        <!--分割线-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_y_2"
            android:layout_marginLeft="@dimen/res_x_30"
            android:layout_marginRight="@dimen/res_x_30"
            android:layout_marginTop="@dimen/res_x_30"
            android:background="@color/res_color_gray_e6" />

        <!--支付方式-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/res_x_30"
            android:layout_marginRight="@dimen/res_x_30"
            android:orientation="horizontal">

            <TextView
                style="@style/ResTextTheme.16.Subtitle.width"
                android:layout_height="@dimen/res_y_90"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="支付方式" />

            <RadioGroup
                android:id="@+id/rg_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/res_x_60"
                android:layout_weight="3">

                <RadioButton
                    android:id="@+id/rb_carpay"
                    style="@style/ResTextTheme.16.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_y_90"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableRight="@drawable/sel_bg_radio_circle"
                    android:gravity="left|center_vertical"
                    android:text="工行卡支付"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_carpay"
                    style="@style/ResTextTheme.14.Red"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_y_60"
                    android:background="@color/res_color_white"
                    android:gravity="left|center_vertical"
                    android:text="申请办理工行畅通卡"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/line_carpay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_y_2"
                    android:background="@color/res_color_gray_e6"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/rb_unionpay"
                    style="@style/ResTextTheme.16.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_y_90"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableRight="@drawable/sel_bg_radio_circle"
                    android:gravity="left|center_vertical"
                    android:text="银联卡支付"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/line_unionpay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_y_2"
                    android:background="@color/res_color_gray_e6"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/rb_alipay"
                    style="@style/ResTextTheme.16.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_y_90"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableRight="@drawable/sel_bg_radio_circle"
                    android:gravity="left|center_vertical"
                    android:text="支付宝支付"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/line_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_y_2"
                    android:background="@color/res_color_gray_e6"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/rb_weixinpay"
                    style="@style/ResTextTheme.16.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_y_90"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableRight="@drawable/sel_bg_radio_circle"
                    android:gravity="left|center_vertical"
                    android:text="微信支付"
                    android:visibility="gone" />

            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <!--优惠劵模块-->
    <RelativeLayout
        android:id="@+id/lay_re_coupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_y_90"
        android:layout_below="@+id/lay_linear_top"
        android:layout_marginBottom="@dimen/res_y_150"
        android:layout_marginTop="@dimen/res_y_30"
        android:background="@drawable/sel_bg_rec_gw">

        <TextView
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/res_x_30"
            android:text="优惠劵" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/res_x_30"
            android:src="@mipmap/ic_arrow_right" />

        <TextView
            android:id="@+id/tv_coupon"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/res_x_30"
            android:layout_toLeftOf="@+id/img_right"
            android:textColor="@color/res_color_red_f3"
            tools:text="优惠劵" />

    </RelativeLayout>


</RelativeLayout>