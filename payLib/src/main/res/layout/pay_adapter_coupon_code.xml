<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/res_y_180">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/res_x_20"
        android:layout_toLeftOf="@+id/relay_status"
        android:background="@mipmap/pay_ic_coupon_white">

        <TextView
            android:id="@+id/tv_title"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/res_x_20"
            android:layout_marginTop="@dimen/res_y_20"
            android:maxLines="2"
            android:textSize="@dimen/res_fs_18"
            tools:text="满300可减去50" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/ResTextTheme.14.Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:singleLine="true"
            tools:text="这里是优化巻哦呀" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/ResTextTheme.16.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_date"
            android:singleLine="true"
            android:textSize="@dimen/fs_14sp"
            tools:text="券码:" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_marginLeft="@dimen/res_x_20"
            style="@style/ResTextTheme.14.Red"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date"
            android:layout_toRightOf="@+id/tv_content"
            tools:text="ASDSDSDSDSDSDSDSDSDSDSDSDSDSDSSDSDSDSD" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay_status"
        android:layout_width="@dimen/res_x_200"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/res_x_20"
        android:background="@mipmap/pay_ic_coupon_red">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/res_x_20"
            android:singleLine="true"
            android:text="查看详情"
            android:textColor="@color/res_color_white"
            android:textSize="@dimen/res_fs_16" />
    </RelativeLayout>

</RelativeLayout>
